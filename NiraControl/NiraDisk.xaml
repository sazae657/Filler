<UserControl x:Class="NiraControl.NiraDisk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NiraControl"
             mc:Ignorable="d" 
             x:Name="NiraDiskView" Height="32">
    <Grid Height="32" VerticalAlignment="Top">
        <Label x:Name="lubel" Content="*" Height="25" VerticalAlignment="Top"/>
        <ProgressBar x:Name="mrogressBar" Margin="0,25,0,0" Minimum="0" Maximum="100" Height="7" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
