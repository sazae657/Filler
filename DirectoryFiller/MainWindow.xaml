<Window x:Class="DirectoryFiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectoryFiller"
        mc:Ignorable="d"
        Title="MainWindow" Height="261" Width="800">
    <Grid>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" Width="135" Height="30" Click="BtnStart_Click"/>
        <TextBox Drop="TxtSrc_Drop" PreviewDragOver="TxtSrc_PreviewDragOver" x:Name="txtSrc" Height="25" Margin="25,75,10.333,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Label x:Name="lblProgress" Content="Label" Margin="25,115,10.333,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="progressBar" Height="40" Margin="25,165,10.333,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
